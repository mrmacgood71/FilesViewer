<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:gravity="center_vertical"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:orientation="horizontal">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/sortByDateAscButton"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/background_filter_radio_button"
            android:button="@android:color/transparent"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Recently created"
            android:textColor="@drawable/text_color_filter_radio_button" />

        <RadioButton
            android:id="@+id/sortByDateDescButton"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/background_filter_radio_button"
            android:button="@android:color/transparent"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Long since created"
            android:textColor="@drawable/text_color_filter_radio_button" />

        <RadioButton
            android:id="@+id/sortByExtensionAscButton"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/background_filter_radio_button"
            android:button="@android:color/transparent"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Extension asc"
            android:textColor="@drawable/text_color_filter_radio_button" />

        <RadioButton
            android:id="@+id/sortByExtensionDescButton"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/background_filter_radio_button"
            android:button="@android:color/transparent"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Extension desc"
            android:textColor="@drawable/text_color_filter_radio_button" />

        <RadioButton
            android:id="@+id/sortBySizeAscButton"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/background_filter_radio_button"
            android:button="@android:color/transparent"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Smallest size"
            android:textColor="@drawable/text_color_filter_radio_button" />

        <RadioButton
            android:id="@+id/sortBySizeDescButton"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/background_filter_radio_button"
            android:button="@android:color/transparent"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Largest size"
            android:textColor="@drawable/text_color_filter_radio_button" />

    </RadioGroup>

</LinearLayout>