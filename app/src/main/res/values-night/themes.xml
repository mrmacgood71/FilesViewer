<resources>
    <!-- Base application theme. -->
    <style name="Theme.VkFileManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#7C83FF</item>
        <item name="colorPrimaryVariant">#bec1f7</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#E57D6B</item>
        <item name="colorSecondaryVariant">#b35140</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textViewStyle">@font/notosans_regular</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>